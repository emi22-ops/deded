    <script>
        // –ó–∞–¥–∞—á–∞ 1
        function getLocation() {
            const demoElement = document.getElementById("demo");
            demoElement.className = 'message';
            demoElement.textContent = "–û–ø—Ä–µ–¥–µ–ª—è–µ–º –≤–∞—à–µ –º–µ—Å—Ç–æ–ø–æ–ª–æ–∂–µ–Ω–∏–µ...";
            
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(
                    showPosition, 
                    showError,
                    {timeout: 10000, enableHighAccuracy: true}
                );
            } else {
                demoElement.className = 'error';
                demoElement.textContent = "–ë—Ä–∞—É–∑–µ—Ä –Ω–µ –ø–æ–¥–¥–µ—Ä–∂–∏–≤–∞–µ—Ç –≥–µ–æ–ª–æ–∫–∞—Ü–∏—é";
            }
        }

        function showPosition(position) {
            const lat = position.coords.latitude.toFixed(6);
            const lon = position.coords.longitude.toFixed(6);
            const demoElement = document.getElementById("demo");
            demoElement.className = 'message';
            demoElement.innerHTML = `
                <div>
                    <strong>–®–∏—Ä–æ—Ç–∞:</strong> ${lat}<br>
                    <strong>–î–æ–ª–≥–æ—Ç–∞:</strong> ${lon}<br>
                    <small>–¢–æ—á–Ω–æ—Å—Ç—å: ¬±${position.coords.accuracy.toFixed(1)} –º–µ—Ç—Ä–æ–≤</small>
                </div>
            `;
        }

        function showError(error) {
            const demoElement = document.getElementById("demo");
            demoElement.className = 'error';
            switch(error.code) {
                case error.PERMISSION_DENIED:
                    demoElement.textContent = "–ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å –æ—Ç–∫–∞–∑–∞–ª –≤ –∑–∞–ø—Ä–æ—Å–µ –≥–µ–æ–ª–æ–∫–∞—Ü–∏–∏";
                    break;
                case error.POSITION_UNAVAILABLE:
                    demoElement.textContent = "–ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –æ –º–µ—Å—Ç–æ–ø–æ–ª–æ–∂–µ–Ω–∏–∏ –Ω–µ–¥–æ—Å—Ç—É–ø–Ω–∞";
                    break;
                case error.TIMEOUT:
                    demoElement.textContent = "–í—Ä–µ–º—è –∑–∞–ø—Ä–æ—Å–∞ –∏—Å—Ç–µ–∫–ª–æ";
                    break;
                case error.UNKNOWN_ERROR:
                    demoElement.textContent = "–ü—Ä–æ–∏–∑–æ—à–ª–∞ –Ω–µ–∏–∑–≤–µ—Å—Ç–Ω–∞—è –æ—à–∏–±–∫–∞";
                    break;
            }
        }

        // –ó–∞–¥–∞—á–∞ 2
        window.addEventListener('scroll', function () {
            const scrollAnimation = document.getElementById('scroll-animation');
            scrollAnimation.style.transform = `translateX(${window.scrollY * 0.5}px)`;
            
            const scrollPercent = window.scrollY / (document.body.scrollHeight - window.innerHeight);
            const hue = Math.round(scrollPercent * 360);
            scrollAnimation.style.backgroundColor = `hsl(${hue}, 70%, 50%)`;
        });

        // –ó–∞–¥–∞—á–∞ 3 - Fetch API —Å —Ä–∞–∑–Ω—ã–º–∏ –∏—Å—Ç–æ—á–Ω–∏–∫–∞–º–∏ –¥–∞–Ω–Ω—ã—Ö
        function fetchLocalFile() {
            const resultElement = document.getElementById("fetchResult");
            resultElement.className = 'message';
            resultElement.textContent = "–ó–∞–≥—Ä—É–∑–∫–∞ –ª–æ–∫–∞–ª—å–Ω–æ–≥–æ —Ñ–∞–π–ª–∞...";
            
            // –í–º–µ—Å—Ç–æ —Ä–µ–∞–ª—å–Ω–æ–≥–æ —Ñ–∞–π–ª–∞ –∏—Å–ø–æ–ª—å–∑—É–µ–º –≤—Å—Ç—Ä–æ–µ–Ω–Ω—ã–µ –¥–∞–Ω–Ω—ã–µ –¥–ª—è –¥–µ–º–æ–Ω—Å—Ç—Ä–∞—Ü–∏–∏
            setTimeout(() => {
                const localData = `–≠—Ç–æ —Å–æ–¥–µ—Ä–∂–∏–º–æ–µ —Ñ–∞–π–ª–∞ fetch_api.txt

–ü—Ä–∏–º–µ—Ä –¥–∞–Ω–Ω—ã—Ö, –ø–æ–ª—É—á–µ–Ω–Ω—ã—Ö —á–µ—Ä–µ–∑ Fetch API:

1. Fetch API - —ç—Ç–æ —Å–æ–≤—Ä–µ–º–µ–Ω–Ω—ã–π –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å –¥–ª—è –≤—ã–ø–æ–ª–Ω–µ–Ω–∏—è HTTP-–∑–∞–ø—Ä–æ—Å–æ–≤
2. –û–Ω —Ä–∞–±–æ—Ç–∞–µ—Ç –Ω–∞ –æ—Å–Ω–æ–≤–µ Promise
3. –ü–æ–¥–¥–µ—Ä–∂–∏–≤–∞–µ—Ç –≤—Å–µ —Å–æ–≤—Ä–µ–º–µ–Ω–Ω—ã–µ –±—Ä–∞—É–∑–µ—Ä—ã
4. –ü–æ–∑–≤–æ–ª—è–µ—Ç –ª–µ–≥–∫–æ —Ä–∞–±–æ—Ç–∞—Ç—å —Å JSON, —Ç–µ–∫—Å—Ç–æ–º –∏ –¥—Ä—É–≥–∏–º–∏ —Ñ–æ—Ä–º–∞—Ç–∞–º–∏
5. –ò–º–µ–µ—Ç —É–ª—É—á—à–µ–Ω–Ω—É—é –æ–±—Ä–∞–±–æ—Ç–∫—É –æ—à–∏–±–æ–∫

–î–∞—Ç–∞ –∑–∞–≥—Ä—É–∑–∫–∏: ${new Date().toLocaleString()}`;
                
                resultElement.innerHTML = `
                    <h4>üìÅ –î–∞–Ω–Ω—ã–µ –∏–∑ –ª–æ–∫–∞–ª—å–Ω–æ–≥–æ —Ñ–∞–π–ª–∞:</h4>
                    <pre style="background: #f0f0f0; padding: 15px; border-radius: 5px; white-space: pre-wrap;">${localData}</pre>
                `;
            }, 800);
        }

        function fetchJSONPlaceholder() {
            const resultElement = document.getElementById("fetchResult");
            resultElement.className = 'message';
            resultElement.textContent = "–ó–∞–≥—Ä—É–∑–∫–∞ –¥–∞–Ω–Ω—ã—Ö —Å JSONPlaceholder...";
            
            fetch('https://jsonplaceholder.typicode.com/posts?_limit=5')
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`–û—à–∏–±–∫–∞ HTTP: ${response.status}`);
                    }
                    return response.json();
                })
                .then(data => {
                    let html = `<h4>üìä –ü–æ—Å–ª–µ–¥–Ω–∏–µ 5 –ø–æ—Å—Ç–æ–≤ —Å JSONPlaceholder:</h4>`;
                    
                    data.forEach(post => {
                        html += `
                            <div class="data-item">
                                <strong>${post.title}</strong>
                                <p style="margin-top: 5px; font-size: 14px;">${post.body.substring(0, 100)}...</p>
                                <small style="color: #7f8c8d;">ID: ${post.id}, User ID: ${post.userId}</small>
                            </div>
                        `;
                    });
                    
                    resultElement.innerHTML = html;
                })
                .catch(error => {
                    resultElement.className = 'error';
                    resultElement.innerHTML = `
                        <h4>‚ùå –û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏</h4>
                        <p>${error.message}</p>
                        <p style="margin-top: 10px;">–ò—Å–ø–æ–ª—å–∑—É–µ—Ç—Å—è –¥–µ–º–æ-–¥–∞–Ω–Ω—ã–µ:</p>
                        <div class="json-data">${JSON.stringify([
                            {id: 1, title: "–î–µ–º–æ –ø–æ—Å—Ç 1", body: "–≠—Ç–æ –¥–µ–º–æ–Ω—Å—Ç—Ä–∞—Ü–∏–æ–Ω–Ω—ã–µ –¥–∞–Ω–Ω—ã–µ"},
                            {id: 2, title: "–î–µ–º–æ –ø–æ—Å—Ç 2", body: "–û—à–∏–±–∫–∞ –ø–æ–¥–∫–ª—é—á–µ–Ω–∏—è –∫ —Å–µ—Ä–≤–µ—Ä—É"},
                            {id: 3, title: "–î–µ–º–æ –ø–æ—Å—Ç 3", body: "–ò—Å–ø–æ–ª—å–∑—É–π—Ç–µ –ª–æ–∫–∞–ª—å–Ω—ã–π —Ñ–∞–π–ª"}
                        ], null, 2)}</div>
                    `;
                });
        }

        function fetchRandomUser() {
            const resultElement = document.getElementById("fetchResult");
            resultElement.className = 'message';
            resultElement.textContent = "–ó–∞–≥—Ä—É–∑–∫–∞ —Å–ª—É—á–∞–π–Ω–æ–≥–æ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è...";
            
            fetch('https://randomuser.me/api/')
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`–û—à–∏–±–∫–∞ HTTP: ${response.status}`);
                    }
                    return response.json();
                })
                .then(data => {
                    const user = data.results[0];
                    resultElement.innerHTML = `
                        <h4>üë§ –°–ª—É—á–∞–π–Ω—ã–π –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å:</h4>
                        <div style="display: flex; align-items: center; gap: 20px; margin-top: 15px;">
                            <img src="${user.picture.large}" alt="Avatar" style="width: 100px; height: 100px; border-radius: 50%; border: 3px solid #3498db;">
                            <div>
                                <h3>${user.name.first} ${user.name.last}</h3>
                                <p><strong>–ü–æ–ª:</strong> ${user.gender === 'male' ? '–ú—É–∂—Å–∫–æ–π' : '–ñ–µ–Ω—Å–∫–∏–π'}</p>
                                <p><strong>Email:</strong> ${user.email}</p>
                                <p><strong>–¢–µ–ª–µ—Ñ–æ–Ω:</strong> ${user.phone}</p>
                                <p><strong>–ì–æ—Ä–æ–¥:</strong> ${user.location.city}, ${user.location.country}</p>
                            </div>
                        </div>
                    `;
                })
                .catch(error => {
                    resultElement.className = 'error';
                    resultElement.innerHTML = `
                        <h4>‚ùå –û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è</h4>
                        <p>${error.message}</p>
                        <div class="json-data">{
  "name": {
    "first": "–ò–≤–∞–Ω",
    "last": "–ò–≤–∞–Ω–æ–≤"
  },
  "email": "demo@example.com",
  "phone": "+7 (123) 456-7890",
  "location": {
    "city": "–ú–æ—Å–∫–≤–∞",
    "country": "–†–æ—Å—Å–∏—è"
  }
}</div>
                    `;
                });
        }

        function fetchDogImage() {
            const resultElement = document.getElementById("fetchResult");
            resultElement.className = 'message';
            resultElement.textContent = "–ó–∞–≥—Ä—É–∑–∫–∞ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è —Å–æ–±–∞–∫–∏...";
            
            fetch('https://dog.ceo/api/breeds/image/random')
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`–û—à–∏–±–∫–∞ HTTP: ${response.status}`);
                    }
                    return response.json();
                })
                .then(data => {
                    resultElement.innerHTML = `
                        <h4>üêï –°–ª—É—á–∞–π–Ω–∞—è —Å–æ–±–∞–∫–∞:</h4>
                        <div style="text-align: center; margin-top: 15px;">
                            <img src="${data.message}" alt="Random Dog" style="max-width: 100%; max-height: 300px; border-radius: 10px; border: 3px solid #3498db;">
                            <p style="margin-top: 10px; color: #7f8c8d;">–ò–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ –ø—Ä–µ–¥–æ—Å—Ç–∞–≤–ª–µ–Ω–æ Dog API</p>
                        </div>
                    `;
                })
                .catch(error => {
                    resultElement.className = 'error';
                    resultElement.innerHTML = `
                        <h4>‚ùå –û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è</h4>
                        <p>${error.message}</p>
                        <div style="text-align: center; margin-top: 15px;">
                            <div style="width: 300px; height: 200px; background: linear-gradient(45deg, #ff9a9e, #fad0c4); border-radius: 10px; display: flex; align-items: center; justify-content: center; margin: 0 auto;">
                                <span style="font-size: 48px;">üêï</span>
                            </div>
                            <p style="margin-top: 10px; color: #7f8c8d;">–î–µ–º–æ-–∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ —Å–æ–±–∞–∫–∏</p>
                        </div>
                    `;
                });
        }

        // –ó–∞–¥–∞—á–∞ 4
        function loadMusic() {
            const musicList = document.getElementById("musicList");
            musicList.innerHTML = '<div class="message">–ó–∞–≥—Ä—É–∑–∫–∞ –º—É–∑—ã–∫–∏...</div>';
            
            // –°–æ–∑–¥–∞–µ–º –¥–µ–º–æ XML –¥–∞–Ω–Ω—ã–µ
            const xmlString = `<?xml version="1.0" encoding="UTF-8"?>
<music>
    <song>
        <artist>The Beatles</artist>
        <title>Hey Jude</title>
        <year>1968</year>
        <genre>Rock</genre>
    </song>
    <song>
        <artist>Queen</artist>
        <title>Bohemian Rhapsody</title>
        <year>1975</year>
        <genre>Rock</genre>
    </song>
    <song>
        <artist>Michael Jackson</artist>
        <title>Billie Jean</title>
        <year>1982</year>
        <genre>Pop</genre>
    </song>
    <song>
        <artist>Moscow</artist>
        <title>–ó–≤–µ–∑–¥—ã</title>
        <year>2020</year>
        <genre>Russian Pop</genre>
    </song>
    <song>
        <artist>–í–∏–∫—Ç–æ—Ä –¶–æ–π</artist>
        <title>–ì—Ä—É–ø–ø–∞ –∫—Ä–æ–≤–∏</title>
        <year>1988</year>
        <genre>Russian Rock</genre>
    </song>
</music>`;
            
            try {
                const parser = new DOMParser();
                const xml = parser.parseFromString(xmlString, "text/xml");
                const songs = xml.getElementsByTagName("song");
                showMusic(songs);
            } catch (error) {
                musicList.innerHTML = '<div class="error">–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ XML</div>';
            }
        }

        function showMusic(songs) {
            var html = "<h4>üéµ –ú—É–∑—ã–∫–∞–ª—å–Ω—ã–π –ø–ª–µ–π–ª–∏—Å—Ç:</h4>";
            for (var i = 0; i < songs.length; i++) {
                var artist = songs[i].getElementsByTagName("artist")[0]?.textContent || "–ù–µ–∏–∑–≤–µ—Å—Ç–µ–Ω";
                var title = songs[i].getElementsByTagName("title")[0]?.textContent || "–ë–µ–∑ –Ω–∞–∑–≤–∞–Ω–∏—è";
                var year = songs[i].getElementsByTagName("year")[0]?.textContent || "–ù–µ—Ç –¥–∞–Ω–Ω—ã—Ö";
                var genre = songs[i].getElementsByTagName("genre")[0]?.textContent || "–ù–µ–∏–∑–≤–µ—Å—Ç–µ–Ω";
                
                html += `
                    <div class="music-item">
                        <div>
                            <b>${artist}</b> - ${title}
                            <div style="display: flex; gap: 15px; margin-top: 5px; font-size: 14px;">
                                <span style="color: #7f8c8d;">üìÖ ${year}</span>
                                <span style="color: #9b59b6;">üéµ ${genre}</span>
                            </div>
                        </div>
                    </div>
                `;
            }
            document.getElementById("musicList").innerHTML = html;
        }

        // –ó–∞–¥–∞—á–∞ 5
        function getRandomColor() {
            const hue = Math.floor(Math.random() * 360);
            return `hsl(${hue}, 70%, 95%)`;
        }
        
        document.getElementById("randomColorButton").onclick = function() {
            document.body.style.backgroundColor = getRandomColor();
        };

        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è Fetch API —Å –¥–µ–º–æ-–¥–∞–Ω–Ω—ã–º–∏
        fetchLocalFile();
    </script>
</body>
</html>
